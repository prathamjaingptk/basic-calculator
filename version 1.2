def add(a, b):
    return a + b

def subtract(a, b):
    return a - b

num1 = float(input("Enter the first number: "))
num2 = float(input("Enter the second number: "))

# Addition
sum_result = add(num1, num2)
print("The sum is:", sum_result)

# Subtraction
sub_result = subtract(num1, num2)
print("The difference is:", sub_result)
